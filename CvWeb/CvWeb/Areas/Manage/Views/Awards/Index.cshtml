@model List<Awards>
@{
    ViewData["Title"] = "Index";
    int order = 0;
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Education:</h1>
        <a asp-controller="Awards" asp-action="Create" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Description</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var awards in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@awards.Desc</td>
                    <td>
                        <form method="post">
                            <a asp-action="Edit" asp-controller="Awards" asp-route-id="@awards.Id" class="btn btn-warning">Edit</a>
                            <button type="submit" asp-action="delete" asp-controller="Awards" asp-route-id="@awards.Id" class="btn btn-danger btn-sweet-delete">Delete</button>
                        </form>

                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


