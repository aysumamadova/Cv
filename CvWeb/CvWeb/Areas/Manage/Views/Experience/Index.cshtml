@model List<Experience>
@{
    ViewData["Title"] = "Index";
    int order = 0;
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Authors:</h1>
        <a asp-controller="experience" asp-action="Create" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title1</th>
                <th scope="col">Title2</th>
                <th scope="col">Description</th>
                <th scope="col">History</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var experience in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@experience.Title1</td>
                    <td>@experience.Title2</td>
                    <td>@experience.Desc</td>
                    <td>@experience.History</td>
                    <td>
                        <form method="post">
                            <a asp-action="Edit" asp-controller="experience" asp-route-id="@experience.Id" class="btn btn-warning">Edit</a>
                            <button type="submit" asp-action="delete" asp-controller="experience" asp-route-id="@experience.Id" class="btn btn-danger btn-sweet-delete">Delete</button>
                        </form>

                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
